<!DOCTYPE html>
<html lang="fr" itemscope itemtype="http://ogp.me/ns/website#">
<head>
  <meta charset="utf-8">

  <title>Timeuh Machine</title>
  <meta name="author" content="Cyril |Â tchap">
  <meta name="description" content="The archive for all tracks that get played on radiomeuh.com">
  <meta name="keywords" content="tracks, radio, meuh, reblochon">
  
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/semantic.min.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('css/main.css') }}" type="text/css" />
    <!--[if lt IE 9]>
      <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  {% endblock %}
</head>
<body>

<div class="ui container">
  <nav class="ui text menu">
    <!-- <div class="header item">Timeuh Machine</div> -->
    <a class="item{% if menu == "home" %} active{% endif %}" href="{{ path('home') }}"><i class="ui icon home"></i> {{ "home.title"|trans }}</a>
    <a class="item{% if menu == "archives" %} active{% endif %}" href="{{ path('archives') }}">{{ "archives.title"|trans }}</a>
    <a class="item{% if menu == "about" %} active{% endif %}" href="{{ path('about') }}">{{ "about.title"|trans }}</a>
  </nav>
</div>

{% for label, messages in app.flashes %}
     {% for message in messages %}
        <div class="ui basic modal">
          <div class="ui icon header">
            <i class="check icon"></i>
            {{ "playlist.message.header"|trans }}
          </div>
          <div class="content">
            <p>{{ message }}</p>
          </div>
          <div class="actions">
            <div class="ui green ok inverted button">
              <i class="checkmark icon"></i>
              {{ "playlist.message.ok"|trans }}
            </div>
          </div>
        </div>
    {% endfor %}
{% endfor %}

{% block content %}
{% endblock %}

{% block javascripts %}
  <script src="{{ asset('js/jquery-3.2.0.min.js') }}"></script>
  <script src="{{ asset('js/semantic.min.js') }}"></script>
  <script src="{{ asset('js/main.js') }}"></script>

  {% if ga_tracker_id != "0" %}
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', '{{ ga_tracker_id }}', 'auto');
      ga('send', 'pageview');

    </script>
  {% endif %}
{% endblock %}

</body>
</html>