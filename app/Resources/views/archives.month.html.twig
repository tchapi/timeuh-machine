{% extends "base.html.twig" %}
{% set menu = 'archives' %}

{% block content %}

<div class="ui container">
  <h1>{{ "archives.title"|trans }} > <a href="{{ path('archives', {year: year}) }}">{{ year }}</a> > {{ monthName }}</h1>

  {% for day in days %}
    <h2>{{ day.name }} {{ monthName|capitalize }} {{ year }}</h2>

    <p>{% for track in day.tracks if track.artist %}{{ track.artist|capitalize }}, {% endfor %}{{ "archives.and.many.more"|trans }}</p>

    <p><a href="{{ path('archives', {year: year, month: month, day: day.key}) }}" class="ui button green"><i class="ui icon music"></i> {{ "archives.see.all.this.day"|trans}}</a></p>
    <div class="ui eight cards">
      {% for track in day.tracks %}
      <div class="card">
        <div class="image">
          <img src="{{ track.image?:asset('img/album_placeholder.png') }}">
        </div>
        <div class="content">
          <div class="header ellipsis">{{ track.title?:("unknown.title"|trans) }}</div>
          <div class="meta">
            <div class="artist ellipsis"><i class="user blue circle icon"></i> {{ track.artist?:("unknown.artist"|trans) }}</div>
            <div class="album ellipsis"><i class="music blue icon"></i> {{ track.album?:("unknown.album"|trans) }}</div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  {% endfor %}

</div>

{% endblock %}